---
// Container for all page content
import Header from "../components/Header/index.astro";

const { content } = Astro.props;
---

<div class="mx-auto z-30 items-center min-h-screen">
  <Header />
  <div class="container max-w-screen-lg mx-auto">
    <div class="px-4 sm:px-5 md:px-10" id={content.id}>
      <div class="h-10 opacity-0"></div>
      <h2
        class="text-2xl sm:text-4xl font-devil font-bold tracking-widest dark:text-white mb-5">
        {content.title}
      </h2>
      <slot />
    </div>
  </div>
</div>
