---
// Container for all page content
import Header from "../components/Header/index.astro";

const { content } = Astro.props;

const showTitle = content?.showTitle ?? true;
---

<div class="mx-auto z-30 items-center min-h-screen pb-20">
  <Header id={content.id} />
  <div
    class="container max-w-screen-lg mx-auto text-black dark:text-white border-0 border-cyan-200">
    <div class="px-8 sm:px-12">
      <div class="h-10 opacity-0"></div>
      {
        showTitle && (
          <h2 class="text-3xl sm:text-4xl font-roboto font-bold tracking-wide dark:text-white mb-5">
            {content.title}
          </h2>
        )
      }
      <slot />
    </div>
  </div>
</div>
