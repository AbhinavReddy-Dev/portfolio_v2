---
// Container for all page content

const { content } = Astro.props;

const showTitle = content?.showTitle ?? true;
---

<!-- <div class="z-30 mx-auto min-h-screen items-center pb-20"> --><!-- <Header  class="scroll-pt-12" /> -->
<main
  class="container mx-auto min-h-screen max-w-screen-lg scroll-mt-28 scroll-pt-28 text-gray-900 dark:text-white">
  <div class="px-8 sm:px-12">
    {
      showTitle && (
        <>
          <div class="h-10 opacity-0" />
          <h2 class="font-roboto mb-10 text-3xl font-bold tracking-wide dark:text-white sm:text-4xl">
            {content.title}
          </h2>
        </>
      )
    }
    <slot />
  </div>
</main>
