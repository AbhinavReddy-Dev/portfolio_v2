---
const { content } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo/SVG/logo.svg" />
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
    <script src="../components/ThemeButton.ts"></script>
    <title>{content.title}</title>
  </head>
  <body
    class="transform-none relative bg-sky-200 dark:bg-indigo-900 bg-gradient-to-bl to-violet-300 via-indigo-300 from-sky-300 dark:to-violet-900 dark:via-indigo-900 dark:from-sky-900 min-h-screen">
    <!-- border-4 border-t-0 border-black dark:border-white -->
    <div
      class="fixed h-screen w-screen border-4 border-b-0 border-black dark:border-white -z-20">
    </div>
    <div
      class="fixed w-screen left-0 bottom-0 border-4 border-b-0 border-black dark:border-white z-20">
    </div>
    <slot />
  </body>
</html>
