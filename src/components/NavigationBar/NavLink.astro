---
interface Navlink {
  href: string;
  id: string;
  title: string;
}
const linkProps: Navlink = Astro.props.navlink;
---

<a
  href={linkProps.href}
  id={linkProps.id}
  title={linkProps.title}
  class="mb-auto block h-fit rounded-lg border border-transparent px-4 py-1 text-gray-700 target:border target:border-black target:bg-gradient-to-bl target:from-sky-200 target:via-indigo-200 target:to-violet-200 target:text-black target:outline-none hover:border hover:border-violet-600 dark:text-gray-300 target:dark:border-white target:dark:from-sky-800 target:dark:via-indigo-800 target:dark:to-violet-800 target:dark:text-white hover:dark:border-violet-400">
  {linkProps.title}</a
>
