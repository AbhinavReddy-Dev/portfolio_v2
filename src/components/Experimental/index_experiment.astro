---
// Component Imports
import ThemeButton from "../../components/ThemeButton.astro";
import Layout from "../../layouts/page.astro";
// import Header from "../../components/Header/index.astro";
import Container from "../../layouts/container.astro";
const title = "Abhinav Reddy";
const id = "home";
// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<Layout content={{ title: "Abhinav Reddy" }}>
  <div
    class="relative my-0 hidden h-screen place-items-center content-center lg:grid">
    <div class="absolute top-10 right-10">
      <ThemeButton />
    </div>
    <div
      class="main-logo z-20 scale-60 transform-gpu bg-main-bg-dark hover:cursor-logo dark:bg-main-bg-light">
      <img
        src="/logo/PNG/logo_big.png"
        alt="Abhinav Reddy Logo"
        class="main-logo z-10 scale-60 opacity-0"
      />
    </div>
    <div
      class="menu-ele-1 absolute -z-0 grid h-20 w-20 place-items-center content-center hover:cursor-pointer">
      <div
        class="z-5 absolute h-19 w-19 animate-menu-bg-motion bg-blue-400 opacity-80 blur-sm filter hover:cursor-pointer">
      </div>
      <a
        href="/projects#projects"
        class="z-4 absolute w-max -rotate-38 font-devil text-3xl font-semibold tracking-widest text-black duration-300 ease-in hover:scale-125 dark:text-white">
        PROJECTS
      </a>
    </div>
    <div
      class="menu-ele-2 absolute -z-0 grid h-20 w-20 place-items-center content-center hover:cursor-pointer">
      <div
        class="z-5 absolute h-19 w-19 animate-menu-bg-motion-2 bg-indigo-500 opacity-80 blur-sm filter hover:cursor-pointer">
      </div>
      <a
        href="/about_me#about_me"
        class="z-4 fixed w-max -rotate-38 font-devil text-3xl font-semibold tracking-widest text-black duration-300 ease-in hover:scale-125 dark:text-white">
        ABOUT ME
      </a>
    </div>
    <div
      class="menu-ele-3 absolute -z-0 grid h-20 w-20 place-items-center content-center hover:cursor-pointer">
      <div
        class="z-5 absolute h-19 w-19 animate-menu-bg-motion-3 bg-blue-400 opacity-80 blur-sm filter hover:cursor-pointer">
      </div>
      <a
        href="/contact_me#contact_me"
        class="z-4 absolute w-max -rotate-38 font-devil text-3xl font-semibold tracking-widest text-black duration-300 ease-in hover:scale-125 dark:text-white">
        CONTACT ME
      </a>
    </div>
    <div
      class="menu-ele-4 absolute -z-0 grid h-20 w-20 place-items-center content-center hover:cursor-pointer">
      <div
        class="z-5 absolute h-19 w-19 animate-menu-bg-motion-4 bg-indigo-500 opacity-80 blur-sm filter hover:cursor-pointer">
      </div>
      <a
        href="/blog_posts#blog_posts"
        class="z-4 absolute w-max -rotate-38 font-devil text-3xl font-semibold tracking-widest text-black duration-300 ease-in hover:scale-125 dark:text-white">
        BLOG POSTS
      </a>
    </div>
    <!-- <Button>Tailwind Button in Astro!</Button> -->
    <h2
      class="my-info absolute bottom-28 z-20 animate-text-appear p-6 text-center font-mono text-lg text-black backdrop-blur-sm dark:text-white">
      I am <span class="font-mono text-xl font-bold">Abhinav Reddy</span> 👨🏻‍💻, I develop
      UI/UX 🪄, Full-Stack Websites 🖥️ and Mobile Applications📱.
    </h2>
  </div>
  <div class="flex w-screen lg:hidden">
    <!-- <Header content={(title, id)} /> -->
  </div>
</Layout>
<script>
  const menuEle1: HTMLDivElement = document.querySelector(".menu-ele-1");
  const menuEle2: HTMLDivElement = document.querySelector(".menu-ele-2");
  const menuEle3: HTMLDivElement = document.querySelector(".menu-ele-3");
  const menuEle4: HTMLDivElement = document.querySelector(".menu-ele-4");

  const mainLogo: HTMLDivElement = document.querySelector(".main-logo");

  const myInfo: HTMLHeadingElement = document.querySelector(".my-info");

  var is_animated: boolean = false;

  function debounce(func: any, wait = 1000, immediate = true) {
    var timeout: number;
    return function () {
      var context = this,
        args = arguments;
      var later = function () {
        timeout = null;
        if (!immediate) func.apply(context, args);
      };
      var callNow = immediate && !timeout;
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
      if (callNow) func.apply(context, args);
    };
  }
  function animate() {
    myInfo.classList.remove("animate-text-appear");
    myInfo.classList.add("animate-text-disappear");

    mainLogo.classList.remove("animate-scale-logo-lg");
    mainLogo.classList.add("animate-scale-logo-sm");

    menuEle1.classList.remove("animate-translate-xy-out-1");
    menuEle1.classList.add("animate-translate-xy-in-1");

    menuEle2.classList.remove("animate-translate-xy-out-2");
    menuEle2.classList.add("animate-translate-xy-in-2");

    menuEle3.classList.remove("animate-translate-xy-out-3");
    menuEle3.classList.add("animate-translate-xy-in-3");

    menuEle4.classList.remove("animate-translate-xy-out-4");
    menuEle4.classList.add("animate-translate-xy-in-4");

    is_animated = true;
  }
  function deanimate() {
    myInfo.classList.add("animate-text-appear");
    myInfo.classList.remove("animate-text-disappear");

    mainLogo.classList.remove("animate-scale-logo-sm");
    mainLogo.classList.add("animate-scale-logo-lg");

    menuEle1.classList.remove("animate-translate-xy-in-1");
    menuEle1.classList.add("animate-translate-xy-out-1");

    menuEle2.classList.remove("animate-translate-xy-in-2");
    menuEle2.classList.add("animate-translate-xy-out-2");

    menuEle3.classList.remove("animate-translate-xy-in-3");
    menuEle3.classList.add("animate-translate-xy-out-3");

    menuEle4.classList.remove("animate-translate-xy-in-4");
    menuEle4.classList.add("animate-translate-xy-out-4");

    is_animated = false;
  }
  debounce(
    window.addEventListener("wheel", (e: WheelEvent) => {
      if (e.deltaY > 0) {
        animate();
      } else {
        deanimate();
      }
    })
  );
  mainLogo.addEventListener("click", () => {
    if (is_animated) deanimate();
    else animate();
  });
</script>
