---
const tagColors = [
  "bg-blue-100 dark:bg-gray-900 text-blue-800",
  "bg-purple-100 dark:bg-gray-900 text-purple-800",
  "bg-green-100 dark:bg-gray-900 text-green-800",
  "bg-yellow-100 dark:bg-gray-900 text-yellow-800",
  "bg-red-100 dark:bg-gray-900 text-red-800",
  "bg-indigo-100 dark:bg-gray-900 text-indigo-800",
  "bg-pink-100 dark:bg-gray-900 text-pink-800",
];

interface Project {
  name: string;
  image: string;
  url: string;
  description: string;
  technologies: string[];
  github: string;
  date: string;
}

const content: Project = Astro.props.content;
const { name, image, description, technologies, url, github, date } = content;
---

<!--
  This component uses @tailwindcss/line-clamp

  yarn add @tailwindcss/line-clamp
  npm install @tailwindcss/line-clamp

  plugins: [require('@tailwindcss/line-clamp')]
-->
<article
  class="mb-16 overflow-hidden rounded-lg bg-gradient-to-tr from-lime-400 via-indigo-400 to-pink-400 bg-[length:200%_200%] p-0.5 shadow-lg hover:shadow-sm dark:shadow-gray-700/25">
  <a href={url} target="_blank" class="">
    {
      image === "" ? (
        <div class=" flex h-56 w-full flex-col items-center justify-center rounded-t-[6px]  bg-sky-50 object-cover text-center duration-150 hover:bg-sky-100 hover:transition-all hover:duration-150 dark:bg-gray-900 hover:dark:bg-zinc-900">
          <p class=" my-auto overflow-hidden bg-clip-text p-2 text-[3rem] font-extrabold leading-snug text-violet-300 dark:text-violet-500 sm:text-[4rem] md:text-violet-300">
            {name}
          </p>
        </div>
      ) : (
        <img
          alt={name}
          src={image}
          class="h-56 w-full  object-cover duration-150 hover:transition-all hover:duration-150"
        />
      )
    }
  </a>

  <div class="rounded-b-[6px] bg-white p-4 dark:bg-gray-800 sm:p-6">
    <time
      datetime="2022-10-10"
      class="block text-xs text-gray-500 dark:text-gray-400">
      {
        new Date(date).toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </time>
    <a href={url} target="_blank" class="">
      <p
        class="mt-1 text-lg font-semibold uppercase leading-tight text-indigo-600 underline hover:underline dark:text-indigo-400 md:no-underline">
        {name}
      </p>
    </a>
    <p
      class="mt-2 text-sm leading-relaxed text-gray-500 line-clamp-3 dark:text-gray-400">
      {description}
    </p>
    <div class="mt-2 flex w-full items-center justify-between">
      <div class="flex flex-wrap gap-2 pr-2">
        {
          technologies.map((tag, idx) => {
            return (
              <span
                class={
                  tagColors[idx] +
                  " inline-block rounded-full px-3 py-1 font-mono text-xs font-normal dark:text-gray-400"
                }>
                {tag}
              </span>
            );
          })
        }
      </div>

      <a href={github} target="_blank" title="GitHub Link">
        <ion-icon
          name="logo-github"
          class="h-8 w-8 text-black hover:scale-105 hover:cursor-pointer hover:text-sky-900 dark:text-white hover:dark:text-sky-200">
        </ion-icon>
      </a>
    </div>
  </div>
</article>
