---
/**
 * Header Index
 */
import ThemeButton from "../ThemeButton.astro";
---

<nav
  class="px-5 sm:px-4 z-20 sticky top-0 backdrop-blur-md py-3 border-t-4 border-black dark:border-white">
  <div class="flex max-w-screen-lg flex-wrap items-center justify-between">
    <a href="/" class="flex items-center">
      <!-- <img
          src="/logo/PNG/logo.png"
          class="h-8 mr-3 sm:h-14"
          alt="Flowbite Logo"
        /> -->
      <div
        class="w-8 h-8 mr-3 sm:w-14 sm:h-14 bg-nav-bg-dark dark:bg-nav-bg-light bg-no-repeat bg-center bg-cover">
        <img
          src="/logo/PNG/logo.png"
          alt="Abhinav Reddy Logo"
          class="opacity-0 w-8 h-8 mr-3 sm:w-14 sm:h-14"
        />
      </div>
      <span
        class="self-center text-xl font-mono tracking-tighter font-semibold whitespace-nowrap dark:text-white"
        >Abhinav Reddy</span
      >
    </a>
    <div class="flex md:order-2">
      <ThemeButton />
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-sticky"
        aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-6 h-6"
          aria-hidden="true"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
            clip-rule="evenodd"></path></svg
        >
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky">
      <ul
        class="flex flex-col p-4 mt-4 border border-gray-100 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 dark:border-gray-700">
        <li>
          <a
            href="/about_me"
            id="about_me"
            class="block target:border-2 target:border-white target:text-black py-2 pl-3 pr-4 dark:text-gray-300 text-gray-700 hover:text-gray-100 md:p-0">
            About Me</a
          >
        </li>
        <li>
          <a
            href="/projects"
            id="projects"
            class="block py-2 pl-3 pr-4 target:border-2 target:border-white dark:text-gray-300 text-gray-700 hover:text-gray-100 md:p-0"
            >Projects</a
          >
        </li>
        <li>
          <a
            href="/blog_posts"
            id="blog_posts"
            class="block py-2 pl-3 pr-4 target:border-2 target:border-white dark:text-gray-300 text-gray-700 hover:text-gray-100 md:p-0"
            >Blog Posts</a
          >
        </li>
        <li>
          <a
            href="/contact_me"
            class="block py-2 pl-3 pr-4 target:border-2 target:border-white dark:text-gray-300 text-gray-700 hover:text-gray-100 md:p-0"
            >Contact Me</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
