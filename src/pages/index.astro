---
import Container from "../layouts/container.astro";
import Layout from "../layouts/page.astro";

const title = "Abhinav Reddy";
const id = "abhinav-reddy";
---

<Layout content={{ title, id }}>
  <Container content={{ title: "", id }}>
    <div
      class="min-h-100 my-auto flex flex-col gap-5 md:grid md:grid-cols-3 md:grid-rows-2 md:gap-10">
      <div
        class="order-2 col-start-1 row-start-2 my-auto flex flex-col gap-4 text-center md:order-1 md:col-span-2 md:row-start-1 md:text-left">
        <p class="text-md mt-2 font-mono text-purple-900 dark:text-emerald-200">
          Hi! I'm
        </p>
        <h2
          data-value={title}
          id="title"
          class="font-mono text-2xl font-semibold tracking-wide underline dark:text-white sm:text-4xl">
          {title}
        </h2>
        <p class="font-mono text-black dark:text-white">
          A software engineer, I like to build user centric websites and mobile
          applications. I'm currently pursuing masters in Computer Science at
          the California State University, Chico. In my freetime I experiement
          with new technologies, learn best practices and contribute to open
          source code.
        </p>
        <div
          class="my-5 flex w-full flex-wrap justify-center gap-6 gap-y-5 md:justify-start lg:gap-x-10">
          <!-- linkedIn -->
          <a
            href="https://www.linkedin.com/in/abhinavreddy-dev/"
            target="_blank"
            title="LinkedIn Link">
            <ion-icon
              name="logo-linkedin"
              class="h-10 w-10 text-black hover:scale-105 hover:cursor-pointer hover:text-sky-900 dark:text-white hover:dark:text-sky-200">
            </ion-icon>
          </a>
          <!-- github -->
          <a
            href="https://github.com/AbhinavReddy-Dev"
            target="_blank"
            title="GitHub Link">
            <ion-icon
              name="logo-github"
              class="h-10 w-10 text-black hover:scale-105 hover:cursor-pointer hover:text-sky-900 dark:text-white hover:dark:text-sky-200">
            </ion-icon>
          </a>
          <!-- email -->
          <a href="mailto:abhinavreddy.dev@gmail.com" target="_blank">
            <ion-icon
              name="mail"
              title="Write an email"
              class="h-10 w-10 text-black hover:scale-105 hover:cursor-pointer hover:text-sky-900 dark:text-white hover:dark:text-sky-200">
            </ion-icon>
          </a>
        </div>
      </div>
      <img
        class="order-1 mx-auto max-h-fit w-56 animate-bg-animation flex-col rounded-full border-b-4 border-black bg-gradient-to-r from-violet-400 via-indigo-400 to-sky-400 p-0 opacity-90 dark:border-white md:col-start-3 md:row-start-1"
        src="/profile.png"
        alt="Abhinav Reddy"
      />
      <a
        href="https://holopin.io/@abhinavreddydev"
        class="relative order-3 col-span-3 row-span-1 flex justify-center p-3">
        <div
          class="absolute inset-x-0 mx-auto h-20 w-[80%] animate-pulse rounded-xl bg-gray-500">
        </div>
        <img
          src="https://holopin.me/abhinavreddydev"
          alt="@abhinavreddydev's Holopin board"
          class="max-h-[85%] transform-gpu cursor-pointer rounded-xl transition-all hover:scale-105"
        />
      </a>
    </div>
  </Container>
</Layout>

<script is:inline>
  const letters = "AbcdefghijklmnopqRstuvwxyz";

  let interval = null;

  document.getElementById("title").onmouseover = (event) => {
    let iteration = 0;
    clearInterval(interval);

    interval = setInterval(() => {
      event.target.innerText = event.target.innerText
        .split("")
        .map((letter, index) => {
          if (index < iteration) {
            return event.target.dataset.value[index];
          }

          return letters[Math.floor(Math.random() * 26)];
        })
        .join("");

      if (iteration >= event.target.dataset.value.length) {
        clearInterval(interval);
      }

      iteration += 1 / 3;
    }, 30);
  };
</script>
